{
  "name": "kaytee-e2e-tests",
  "version": "1.0.0",
  "description": "Centralized E2E testing repository for the KayTee ecosystem",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:tropical": "playwright test --project=kaytee-tropical",
    "test:quality": "playwright test --project=quality-metrics",
    "test:portfolio": "playwright test --project=digital-portfolio",
    "test:hub": "playwright test --project=kaytee-hub",
    "test:report": "playwright show-report",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm test"
  },
  "dependencies": {
    "@playwright/test": "^1.49.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^8.57.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
